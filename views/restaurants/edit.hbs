<form action="/{{restaurant.id}}?_method=PUT" method="POST">
    <div>
        <label for="name">Name</label>
        <input type="text" name="name" id="name" value="{{restaurant.name}}">
    </div>
    <div>
        <label for="address">Address</label>
        <input type="text" name="address" id="address" value="{{restaurant.address}}">
    </div>
    <div>
        <label for="rating">Rating</label>
        <input type="number" name="rating" id="rating" value={{restaurant.rating}}>
    </div>
     <div>
        <label for="patio">Patio?</label>
        <input type="text" name="patio" id="patio" value={{restaurant.patio}}>
    </div>
     <div>
        <label for="image">Image Link</label>
        <input type="text" name="imgLink" id="imgLink" value={{restaurant.imgLink}}>
    </div>
    <input type="submit" value="Submit">
</form>